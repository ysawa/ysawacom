= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-welcome' }) do |f|
  %h2.form-welcome-heading
    Edit #{resource_name.to_s.humanize}
  = devise_error_messages!
  = f.email_field :email, autofocus: true, placeholder: User.human_attribute_name(:email)
  = f.password_field :password, placeholder: User.human_attribute_name(:password), autocomplete: "off"
  = f.password_field :password_confirmation, placeholder: User.human_attribute_name(:password_confirmation), autocomplete: "off"
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password
  %div= f.submit "Update", class: 'btn btn-primary'
  %h3 Cancel my account
  %p
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}.
  = link_to "Back", :back
