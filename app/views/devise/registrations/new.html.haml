= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-welcome' }) do |f|
  %h2.form-welcome-heading
    Sign up
  = devise_error_messages!
  = f.email_field :email, autofocus: true, placeholder: User.human_attribute_name(:email), class: "input-block-level"
  = f.password_field :password, placeholder: User.human_attribute_name(:password), autocomplete: "off", class: "input-block-level"
  = f.password_field :password_confirmation, placeholder: User.human_attribute_name(:password_confirmation), autocomplete: "off", class: "input-block-level"
  %div= f.submit "Sign up", class: 'btn btn-primary'
  = render "devise/shared/links"
