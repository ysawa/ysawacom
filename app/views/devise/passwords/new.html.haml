= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-welcome' }) do |f|
  %h2.form-welcome-heading
    Forgot your password?
  = devise_error_messages!
  = f.email_field :email, autofocus: true, placeholder: User.human_attribute_name(:email), class: "input-block-level"
  %div= f.submit "Send me reset password instructions", class: 'btn btn-primary'
  = render "devise/shared/links"
