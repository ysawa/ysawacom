= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-welcome' }) do |f|
  %h2.form-welcome-heading
    Change your password
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  = f.password_field :password, autofocus: true, placeholder: User.human_attribute_name(:password)
  = f.password_field :password_confirmation, placeholder: User.human_attribute_name(:password_confirmation)
  %div= f.submit "Change my password", class: 'btn btn-primary'
  = render "devise/shared/links"
