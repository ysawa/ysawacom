= form_for @article, html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title, class: 'text_field'
  .control-group
    = f.label :content, class: 'control-label'
    .controls
      = f.text_area :content, class: 'text_field'
  .control-group
    = f.label :slug, class: 'control-label'
    .controls
      = f.text_field :slug, class: 'text_field'
  .control-group
    = f.label :published, class: 'control-label'
    .controls
      = f.text_field :published, class: 'text_field'
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), articles_path, class: 'btn'
