- model_class = Article
- decorator = ArticleDecorator.new @article
%h1
  = decorator.title
%small
  = decorator.description

%section.content
  = decorator.content

.well
  %p
    %strong= model_class.human_attribute_name(:id) + ':'
    %br
    = @article.id
  %p
    %strong= model_class.human_attribute_name(:title) + ':'
    %br
    = @article.title
  %p
    %strong= model_class.human_attribute_name(:description) + ':'
    %br
    = @article.description
  %p
    %strong= model_class.human_attribute_name(:slug) + ':'
    %br
    = @article.slug
  %p
    %strong= model_class.human_attribute_name(:published) + ':'
    %br
    = @article.published

- if user_signed_in?
  .form-actions
    = link_to t('.back', default: t("helpers.links.back")), articles_path, class: 'btn'
    = link_to t('.edit', default: t("helpers.links.edit")), edit_article_path(@article), class: 'btn btn-primary'
    = link_to t('.preview', default: t("helpers.links.preview")), preview_article_path(@article), class: 'btn btn-info'
    = link_to t('.destroy', default: t("helpers.links.destroy")), article_path(@article), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
= content_for :after_javascript do
  :coffee
    $ ->
      $('.content > h2').prepend('<i class="icon-hand-right"></i> ')
